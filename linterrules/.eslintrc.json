{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "useTab": true,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }]
  }
}